pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                sh 'kubectl delete deployment deployment-smtp-consumer || true'
                //sh 'kubectl delete svc service-smtp-consumer || true'
            }
        }
	stage('Service of rabbitmq') {
             steps {
                sh 'kubectl create -f service-smtp-rabbitmq.yaml || true'
            }
        }
        stage('Deployment of rarbbitmq') {
            steps {
                sh 'kubectl create -f deployment-smtp-rabbitmq.yaml || true'
            }
        }
	stage ('wait_prior_starting_smoke_testing') {
	    steps{
    		echo "Waiting 20 seconds for deployment to complete prior starting smoke testing"
    		sleep 20 // seconds
	    }
	}
	stage('Service of consumer') {
             steps {
                sh 'kubectl create -f service-smtp-consumer.yaml || true'
            }
        }
	stage('Deployment of consumer') {
            steps {
                sh 'kubectl create -f deployment-smtp-consumer.yaml'
            }
        }
        stage (' start the consumer microservice'){
             steps {
                sh 'kubectl get pods || true'
            }
        }
    }
}
