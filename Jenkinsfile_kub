pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                sh 'sudo usermod -a -G docker $USER || true'
                sh 'sudo docker rmi nawazkh/login:latest || true'
                sh 'sudo docker rmi postgres:9.3 || true'
                sh 'kubectl delete deployment deployment-login-db || true'
                sh 'kubectl delete deployment deployment-login || true'
                sh 'kubectl delete svc service-login-db || true'
                sh 'kubectl delete svc service-login || true'
            }
        }
        stage('Database') {
            steps {
                sh 'kubectl create -f deployment-login-db.yaml'
                sh 'kubectl create -f service-login-db.yaml'
            }
        }
        stage('Search - Service') {
             steps {
                sh 'kubectl create -f deployment-login.yaml'
                sh 'kubectl create -f service-login.yaml'
            }
        }
         stage('Echo') {
             steps {
                sh 'kubectl get pods || true'
            }
        }
    }
}
