pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                sh 'sudo usermod -a -G docker $USER || true'
                sh 'kubectl delete deployment deployment-smtp-rabbitmq || true'
                sh 'kubectl delete svc service-smtp-rabbitmq || true'
            }
        }
        stage('Deployment of rarbbitmq') {
            steps {
                sh 'kubectl create -f deployment-smtp-rabbitmq.yaml'
            }
        }
        stage('Service of rabbitmq') {
             steps {
                sh 'kubectl create -f service-smtp-rabbitmq.yaml'
            }
        }
	stage ('wait_prior_starting_smoke_testing') {
		steps{
    		echo "Waiting 180 seconds for deployment to complete prior starting smoke testing"
    		sleep 120 // seconds
		}
	}
	stage('Deployment of consumer') {
            steps {
                sh 'kubectl create -f deployment-smtp-consumer.yaml'
            }
        }
        stage('Service of consumer') {
             steps {
                sh 'kubectl create -f service-smtp-consumer.yaml'
            }
        }
        stage (' start the consumer microservice'){
             steps {
                sh 'kubectl get pods || true'
            }
        }
    }
}
