pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                sh 'sudo usermod -a -G docker $USER || true'
                sh 'sudo docker rmi ljosyula/frontend:latest || true'
                sh 'kubectl delete deployment deployment-front-react || true'
                sh 'kubectl delete svc service-front-react || true'
            }
        }
        stage('FrontEnd - Service') {
             steps {
                sh 'kubectl create -f deployment-front-react.yaml'
                sh 'kubectl create -f service-front-react.yaml'
            }
        }
         stage('Echo') {
             steps {
                sh 'kubectl get pods || true'
            }
        }
    }
}
