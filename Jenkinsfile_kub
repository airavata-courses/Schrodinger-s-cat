pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                sh 'sudo usermod -a -G docker $USER || true'

                sh 'sudo docker rmi nodeserver:latest || true'
                sh 'kubectl delete deployment deployment-node-server || true'
                sh 'kubectl delete svc service-node-server || true'
            }
        }
        
        stage('Search - Service') {
             steps {
                sh 'kubectl create -f deployment-node-server.yaml'
                sh 'kubectl create -f service-node-server.yaml'
            }
        }
         stage('Echo') {
             steps {
                sh 'kubectl get pods || true'
            }
        }
    }
}
