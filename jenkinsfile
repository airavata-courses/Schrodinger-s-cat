pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                sh 'docker swarm init'
            }
        }
        stage('Image Build') {
            steps {
                sh 'docker build -t scatnodeserver .'
                echo 'Build Complete'
            }
        }
        stage('Deploy') {
            steps {

                script{
                    sh "docker stack deploy -c docker-compose.yml nodeserver"
                // withEnv(['JENKINS_NODE_COOKIE=dontKillMe']) {
                //     sh "docker-compose up -d"
                // }
            }
            }
        }
    }
}
